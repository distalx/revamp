{
  "name": "revamp",
  "version": "0.0.0-semantically-released",
  "description": "censor swear words & adult language.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist && mkdir dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename revamp.js",
    "build:umd.min": "webpack --output-filename revamp.min.js -p",
    "cover": "nyc npm t",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "commit": "git-cz",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "mocha src/index.test.js  --compilers js:babel-register",
    "watch:test": "npm t -- -w",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/distalx/revamp.git"
  },
  "author": "distalx <distalx@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/distalx/revamp/issues"
  },
  "homepage": "https://github.com/distalx/revamp#readme",
  "keywords": [
    "Censored Word Filter",
    "Swear Word Filter",
    "Curse Word Filter"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-loader": "6.2.5",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "6.18.0",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "json-loader": "0.5.4",
    "mocha": "3.1.2",
    "npm-run-all": "3.0.0",
    "nyc": "8.1.0",
    "semantic-release": "^4.3.5",
    "webpack": "1.13.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
